{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build and debug active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/std:c++20",
                "/W4",
                "/Od",
                "/RTC1",
                "/EHsc",
                "/analyze",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${workspaceFolder}/*.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}